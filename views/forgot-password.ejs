<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= typeof title !== "undefined" ? title : "Forgot Password" %></title>
  <link rel="stylesheet" href="/stylesheets/forgot-password.css" />
</head>
<body>
  <div class="forgot-password-container">
    <h1>Forgot Password</h1>
    
    <% if (messages && messages.length > 0) { %>
      <div class="error-message">
        <% messages.forEach(function (msg) { %>
          <p><%= msg %></p>
        <% }); %>
      </div>
    <% } %>

    <!-- Form quên mật khẩu -->
    <form id="forgotPasswordForm" method="POST">
      <input type="hidden" id="csrfToken" name="_csrf" value="<%= csrfToken %>">
      <label for="email">Email Address:</label>
      <input type="email" id="email" name="email" placeholder="Enter Your Work Email Address" required />

      <!-- Nhóm nút -->
      <div class="button-group">
        <button type="submit">Submit</button>
        <button type="button" class="cancel-btn" onclick="window.location.href='/'">Cancel</button>
      </div>
    </form>

    <!-- Hiển thị thông báo -->
    <p id="message" style="color: red; font-weight: bold;"></p>


    <p>Need help? Visit our <a href="#">help center</a></p>
  </div>

  <script src="/javascripts/forgot-password.js"></script>
</body>
</html>
