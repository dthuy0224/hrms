            </div>

            <!-- Second Row -->
            <div class="row">
                <!-- Leave Applications -->
                <div class="col-lg-6">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title"><i class="fa fa-calendar fa-fw"></i> Leave Applications Overview</h3>
                        </div>
                        <div class="panel-body">
                            <div class="list-group">
                                <a href="/admin/leave-applications" class="list-group-item">
                                    <span class="badge"><%= pendingLeaves %></span>
                                    <i class="fa fa-fw fa-clock-o"></i> Pending Leave Applications
                                </a>
                                <a href="/admin/leave-applications" class="list-group-item">
