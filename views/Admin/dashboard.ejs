<%- include('../Partials/header') %>
<%- include('../Partials/admin_navbar') %>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Admin Dashboard</h1>
            
            <div class="row">
                <!-- Employees Card -->
                <div class="col-lg-3 col-md-6">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">
                                    <i class="fa fa-users fa-5x"></i>
                                </div>
                                <div class="col-xs-9 text-right">
                                    <div class="huge"><%= totalEmployees %></div>
                                    <div>Total Employees</div>
                                </div>
                            </div>
                        </div>
                        <a href="/admin/view-all-employees">
                            <div class="panel-footer">
                                <span class="pull-left">View Details</span>
                                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                <div class="clearfix"></div>
                            </div>
                        </a>
                    </div>
                </div>

                <!-- Managers Card -->
                <div class="col-lg-3 col-md-6">
                    <div class="panel panel-green">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">
                                    <i class="fa fa-user-secret fa-5x"></i>
                                </div>
                                <div class="col-xs-9 text-right">
                                    <div class="huge"><%= totalManagers %></div>
                                    <div>Total Managers</div>
                                </div>
                            </div>
                        </div>
                        <a href="/admin/view-all-employees">
                            <div class="panel-footer">
                                <span class="pull-left">View Details</span>
                                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                <div class="clearfix"></div>
                            </div>
                        </a>
                    </div>
                </div>

                <!-- Projects Card -->
                <div class="col-lg-3 col-md-6">
                    <div class="panel panel-yellow">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">
                                    <i class="fa fa-tasks fa-5x"></i>
                                </div>
                                <div class="col-xs-9 text-right">
                                    <div class="huge"><%= totalProjects %></div>
                                    <div>Total Projects</div>
                                </div>
                            </div>
                        </div>
                        <a href="/admin/view-all-employees">
                            <div class="panel-footer">
                                <span class="pull-left">View Projects</span>
                                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                <div class="clearfix"></div>
                            </div>
                        </a>
                    </div>
                </div>

                <!-- Today's Attendance Card -->
                <div class="col-lg-3 col-md-6">
                    <div class="panel panel-red">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">
                                    <i class="fa fa-check-circle fa-5x"></i>
                                </div>
                                <div class="col-xs-9 text-right">
                                    <div class="huge"><%= todayAttendance %></div>
                                    <div>Today's Attendance</div>
                                </div>
                            </div>
                        </div>
                        <a href="#">
                            <div class="panel-footer">
                                <span class="pull-left">View Details</span>
                                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                <div class="clearfix"></div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Second Row -->
            <div class="row">
                <!-- Leave Applications -->
                <div class="col-lg-6">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title"><i class="fa fa-calendar fa-fw"></i> Leave Applications Overview</h3>
                        </div>
                        <div class="panel-body">
                            <div class="list-group">
                                <a href="/admin/leave-applications" class="list-group-item">
                                    <span class="badge"><%= pendingLeaves %></span>
                                    <i class="fa fa-fw fa-clock-o"></i> Pending Leave Applications
                                </a>
                                <a href="/admin/leave-applications" class="list-group-item">
                                    <span class="badge"><%= totalLeaves %></span>
                                    <i class="fa fa-fw fa-calendar"></i> Total Leave Applications
                                </a>
                            </div>
                            <div class="text-right">
                                <a href="/admin/leave-applications">View All Leave Applications <i class="fa fa-arrow-circle-right"></i></a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="col-lg-6">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title"><i class="fa fa-rocket fa-fw"></i> Quick Actions</h3>
                        </div>
                        <div class="panel-body">
                            <div class="list-group">
                                <a href="/admin/add-employee" class="list-group-item">
                                    <i class="fa fa-fw fa-user-plus"></i> Add New Employee
                                </a>
                                <a href="/admin/mark-attendance" class="list-group-item">
                                    <i class="fa fa-fw fa-check"></i> Mark Attendance
                                </a>
                                <a href="/admin/view-profile" class="list-group-item">
                                    <i class="fa fa-fw fa-user"></i> View Profile
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../Partials/footer') %> 